<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ChgCharityJamPrototype</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/main.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ChgCharityJamPrototype.styles.css" asp-append-version="true" />
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="js/AjaxCall.js"></script>
    <script src="js/Effects.js"></script>
    <script src="js/Senders.js"></script>
    <script src="js/Receivers.js"></script>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Board" asp-action="Index">ChgCharityJamPrototype</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="BackendBoard" asp-action="Index">Backend Board</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Board" asp-action="Index">Frontend Board</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
<div class="showCardModal">
	<div class="cardPicture">
		<img src="Assets/playing_cards/actions/SDCS-012.jpg"/>
		<div class="row row-cols-1 row-cols-md-2 row-cols-lg-4 g-4 d-flex affectedTeams">
			<!-- Platzhalter für Items -->
			<div class="col">
				<div class="itemWrapper">
					<div class="states">
						<div class="states-left">
							<div class="status--1">Status 1</div>
							<div class="status--2">Status 2</div>
						</div>
						<div class="states-right">
							<div class="status--3">Status 3</div>
							<div class="status--4">Status 4</div>
						</div>
					</div>
					<div class="item">
						<div class="credits">200.000 CC</div>
						<div class="teamName"> Team 1</div>
					</div>
				</div>
			</div>
			<div class="col">
				<div class="itemWrapper">
					<div class="states">
						<div class="states-left">
							<div class="status--1">Status 1</div>
							<div class="status--2">Status 2</div>
						</div>
						<div class="states-right">
							<div class="status--3">Status 3</div>
							<div class="status--4">Status 4</div>
						</div>
					</div>
					<div class="item">
						<div class="credits">200.000 CC</div>
						<div class="teamName"> Team 2</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
